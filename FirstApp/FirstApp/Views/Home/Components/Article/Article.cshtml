@model IEnumerable<FirstApp.Models.Articles>


		<section class="latest-blog-section p-3 p-lg-5">
			<div class="container">
				<h2 class="section-title font-weight-bold mb-5">آخرین مقالات</h2>
				<div class="row">
					
                    @foreach (var Articlee in Model)
                    {
                        <div class="col-md-4 mb-5">
                            <div class="card blog-post-card">
                                <img class="card-img-top" src="assets/images/blog/@Articlee.Image" alt="image">
                                <div class="card-body">
                                    <h5 class="card-title"><a class="theme-link" href="blog-post.html">@Articlee.title</a></h5>
                                    <p class="card-text">@Articlee.Discreption</p>
                                    <p class="mb-0"><a class="more-link" href="blog-post.html">ادامه مطلب</a></p>

                                </div>
                            </div>
                        </div>
                    }
				</div>
			</div>
		</section> 
